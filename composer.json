{
  "name": "archon/slash",
  "description": "Slash: Dynamic PHP Web Application Framework",
  "keywords": ["slash", "framework", "dynamic"],
  "homepage": "https://github.com/HWGehring/Slash",
  "type": "library",
  "license": "BSD-3-Clause",
  "require": {
    "php": ">=5.3",
    "gajus/dindent": "2.0.2"
  },
  "require-dev": {
    "phpunit/phpunit": "4.7.*",
    "phpmd/phpmd" : "@stable",
    "squizlabs/php_codesniffer": "2.3.4",
    "satooshi/php-coveralls": "dev-master"
  },
  "autoload": {
    "psr-4": { "Archon\\": "src/"}
  },
  "autoload-dev" : {
    "psr-4": { "Archon\\Tests\\": "tests/" }
  }
}